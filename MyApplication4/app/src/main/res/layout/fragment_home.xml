<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/ueberschrfit"
            android:layout_width="46mm"
            android:layout_height="49dp"
            android:text="@string/h.Hefeberechnung"
            android:textSize="35dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/button3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.014" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="33mm"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/h.Mehlgewicht"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView16" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="19mm"
            android:layout_height="50dp"
            android:inputType="number"
            android:layout_marginStart="7mm"
            android:layout_marginTop="16dp"
            android:hint="@string/h.inGramm"
            android:textSize="22dp"
            app:layout_constraintStart_toEndOf="@+id/textView7"
            app:layout_constraintTop_toBottomOf="@+id/textView16" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="33mm"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="@string/h.Teigruhe"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <EditText
            android:id="@+id/editText4"
            android:layout_width="8mm"
            android:layout_height="50dp"
            android:inputType="number"
            android:layout_marginStart="7mm"
            android:layout_marginTop="4dp"
            android:hint="@string/h.h"
            android:textSize="22dp"
            app:layout_constraintStart_toEndOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/editText" />

        <EditText
            android:id="@+id/editText6"
            android:layout_width="10mm"
            android:layout_height="50dp"
            android:inputType="number"
            android:layout_marginStart="0dp"
            android:layout_marginTop="4dp"
            android:hint="@string/h.min"
            android:textSize="22dp"
            app:layout_constraintStart_toEndOf="@+id/editText4"
            app:layout_constraintTop_toBottomOf="@+id/editText" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="33mm"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/h.Temperatur"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />


        <EditText
            android:id="@+id/editText3"
            android:layout_width="18mm"
            android:layout_height="50dp"
            android:inputType="number"
            android:layout_marginStart="7mm"
            android:layout_marginTop="13dp"
            android:hint="@string/h.C"
            android:textSize="22dp"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/editText4" />

        <Button
            android:id="@+id/calculateButton"
            android:layout_width="58mm"
            android:layout_height="67dp"
            android:layout_marginTop="44dp"
            android:text="@string/h.berechnen"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="33mm"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="@string/h.frischhefe"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/calculateButton" />

        <TextView
            android:id="@+id/resultlabel"
            android:layout_width="18mm"
            android:layout_height="35dp"

            android:layout_marginStart="7mm"
            android:layout_marginTop="24dp"
            android:textSize="25sp"
            app:layout_constraintStart_toEndOf="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/calculateButton" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="68dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="297dp"
            android:layout_marginBottom="15dp"
            android:text="@string/h.oder"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@+id/textView5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.03"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="33mm"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/h.Trockenhefe"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView18" />

        <TextView
            android:id="@+id/resultlabel2"
            android:layout_width="18mm"
            android:layout_height="35dp"

            android:layout_marginStart="7mm"
            android:layout_marginTop="48dp"
            android:textSize="25sp"
            app:layout_constraintStart_toEndOf="@+id/textView5"
            app:layout_constraintTop_toBottomOf="@+id/resultlabel" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="68dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="297dp"
            android:layout_marginBottom="15dp"
            android:text="@string/h.oder"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/textView6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="33mm"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/h.Sauerteihg"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView19" />

        <TextView
            android:id="@+id/resultlabel3"
            android:layout_width="18mm"
            android:layout_height="35dp"

            android:layout_marginStart="7mm"
            android:layout_marginTop="48dp"
            android:textSize="25sp"
            app:layout_constraintStart_toEndOf="@+id/textView6"
            app:layout_constraintTop_toBottomOf="@+id/resultlabel2" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="33mm"
            android:layout_height="62dp"
            android:layout_marginTop="40dp"
            android:text="@string/h.Teigruhebeendet"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <TextView
            android:id="@+id/resultlabel4"
            android:layout_width="15mm"
            android:layout_height="wrap_content"
            android:layout_marginStart="7mm"
            android:layout_marginTop="40dp"
            android:textSize="25sp"
            app:layout_constraintStart_toEndOf="@+id/textView8"
            app:layout_constraintTop_toBottomOf="@+id/resultlabel3" />

        <TextView
            android:id="@+id/resultlabel5"
            android:layout_width="126dp"
            android:layout_height="35dp"
            android:layout_marginTop="32dp"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/resultlabel4" />

        <Button
            android:id="@+id/button3"
            android:layout_width="47dp"
            android:layout_height="56dp"
            android:layout_marginTop="16dp"
            android:text="@string/Frage"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="18sp"
            android:text="@string/h.sinn"
            app:layout_constraintBottom_toTopOf="@+id/textView7"
            app:layout_constraintEnd_toStartOf="@+id/editText"
            app:layout_constraintTop_toBottomOf="@+id/button3" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>

